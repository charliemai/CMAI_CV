---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Welcome!</div>
    <div class="text-5xl font-bold">I'm YUNG-CHI(Charlie) MAI</div>
    <div class="text-3xl py-3 font-bold">DevOps Support Engineer | Ex-AWS Cloud Support Engineer II | Cloud & AI Tooling Builder | UCD MSc (Negotiated Learning)</div>
    <div class="py-2">
      <p class="text-lg">
        This website is my <strong>living portfolio</strong> and growth log.
        I document what I build across cloud infrastructure, DevOps automation, mobile apps, and AI tools — including lightweight demos and architecture notes.
        I have 15+ years of hands-on experience, and I’m currently working in Ireland supporting mission-critical systems.
        I’m also studying a <strong>part-time MSc at University College Dublin</strong> and publishing module notes + demos in the <a class="text-blue-600 underline" href="/learning">Learning</a> section.
      </p>
    </div>
    <div class="mt-8">
      <a href="/projects" class="btn btn-primary">Explore Projects</a>
      <a href="/learning" class="btn btn-outline ml-3">Learning Log</a>
      <a href="/cv" class="btn btn-outline ml-3">View CV</a>
      <a href="https://lkk.dev" target="_blank" class="btn btn-outline ml-3">Vouchgether</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Highlighted Projects {"</>"}</div>
  </div>

  <HorizontalCard
      title="VideoTranslate"
      img="/project_videotranslate.png"
      desc="Upload an MP4/MOV to S3 and EventBridge triggers AWS Batch to generate Whisper subtitles (with optional translation)."
      url="/projects/videotranslate"
      target="_self"
      badge="Prototype"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
      title="UCD Sport Auto Booker"
      img="/project_ucd_sport_booker.png"
      desc="A scheduled automation that logs into a booking site, secures sports slots, and sends email notifications — built with EventBridge Scheduler + Lambda + DynamoDB."
      url="/projects/ucd-sport-auto-booker"
      target="_self"
      badge="Automation"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
      title="ArgumentLab"
      img="/project_argumentlab.png"
      desc="YouTube → Vector DB → chat UI for exploring political ideas, comparing arguments, and mapping my own reasoning over time."
      url="/projects/argumentlab"
      target="_self"
      badge="AI Lab"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
      title="RAG Troubleshooting GPT Assistant"
      img="/project_cmai_troubleshooting_system.png"
      desc="Self-built AI agent to semantically search my technical documents and assist in complex troubleshooting workflows. Supports ingestion, Pinecone search, and a memory loop."
      url="/projects/rag-troubleshooting-gpt-assistant"
      target="_self"
      badge="AI"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
      title="Vouchgether"
      img="/project_vouchgether.jpeg"
      desc="Voucher-sharing community service in Ireland (WhatsApp bot + web portal + AWS serverless backend + Stripe subscriptions)."
      url="/projects/vouchgether"
      target="_self"
      badge="Live"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
      title="Parking Violation Reporter"
      img="/project_parking.webp"
      desc="Single-handedly developed a citizen app that handled 440,000+ violation reports in Taiwan within one year."
      url="/projects/parking-violation-reporter"
      target="_self"
      badge="Popular"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
        <>
          <HorizontalCard
              title={post.data.title}
              img={post.data.heroImage}
              desc={post.data.description}
              url={"/blog/" + createSlug(post.data.title, post.slug)}
              target="_self"
              badge={post.data.badge}
          />
          <div class="divider my-0" />
        </>
    ))
  }
</BaseLayout>
